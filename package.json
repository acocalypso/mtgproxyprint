{
  "name": "mtg-proxy-print",
  "private": true,
  "workspaces": [
    "frontend",
    "server"
  ],
  "scripts": {
    "install:all": "npm install --workspace frontend && npm install --workspace server",
    "dev": "concurrently \"npm run dev --workspace server\" \"npm run dev --workspace frontend\"",
    "build": "npm run build --workspace server && npm run build --workspace frontend",
    "start": "cross-env NODE_ENV=production npm run start --workspace server",
    "test": "npm run test --workspace server",
    "lint": "eslint --ext .ts,.js,.vue frontend/src server/src",
    "lint:fix": "eslint --ext .ts,.js,.vue frontend/src server/src --fix",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:up:detached": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:dev:build": "docker-compose -f docker-compose.dev.yml build",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:clean": "docker-compose down --volumes --remove-orphans && docker system prune -f"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.5.0",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.45.0"
  }
}
